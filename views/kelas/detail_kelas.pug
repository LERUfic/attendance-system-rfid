extends ../layout

block content
    .container
        a(href='/kelas/'+class_id+'/tambah') Tambah Mahasiswa

        p List Mahasiwa
        table(class="table")
            thead
                tr
                    th(scope="col") No.
                    th(scope="col") NRP
                    th(scope="col") Action
            tbody
                if results
                    -var i=1;
                    each val in results
                        -var student_id=val.student_id;
                        tr
                            th(scope="row")=i++
                            td=student_id
                            td
                                a(href='/kelas/'+class_id+'/'+student_id+'/delete') delete